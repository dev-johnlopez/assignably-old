
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/images/favicon_1.ico">

    <title>Minton - Responsive Admin Dashboard Template</title>

    @Styles.Render("~/Content/css")
    <script src="@Url.Content("~/Scripts/modernizr.min.js")"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="wrapper-page">
        <div class="text-center">
            <a href="/Home/Index" class="logo-lg"><i class="md md-equalizer"></i> <span>Minton</span> </a>
        </div>

        <div class="card-box m-t-20">
            <div class="text-center">
                <h4 class="text-uppercase font-bold m-b-0">Confirm Email</h4>
            </div>
            <div class="text-center">
                <img src="~/images/mail_confirm.png" alt="img" class="thumb-lg m-t-20 center-block">
                <p class="text-muted font-13 m-t-20"> A email has been send to <b>youremail@domain.com</b>. Please check for an email from company and click on the included link to reset your password. </p>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var resizefunc = [];
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundle/common")
    @Scripts.Render("~/bundle/core-app")
</body>
</html>